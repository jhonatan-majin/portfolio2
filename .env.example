# MongoDB Connection
MONGO_URL=mongodb://localhost:27017/portfolio
# Para MongoDB Atlas usa el formato:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret - Cambia esto por un valor seguro y aleatorio
TOKEN_SECRET=tu_secret_key_muy_seguro_y_aleatorio_aqui

# Cloudinary Configuration (para subida de imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Node Environment
NODE_ENV=development
# En producción usa: NODE_ENV=production

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
# En producción usa tu dominio: NEXT_PUBLIC_API_URL=https://tudominio.com
